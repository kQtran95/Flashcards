<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flash_cards"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="171dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.583" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="350dp" android:id="@+id/hiraganaViewer"
            android:contentDescription="@string/hiragana_a"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/input"
            app:layout_constraintEnd_toEndOf="parent" app:srcCompat="@drawable/hiragana_a"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/input">
    </FrameLayout>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="67dp">
        <com.example.flashcards.PaintView
                android:id="@+id/paintView"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                tools:layout_conversion_wrapWidth="1440"
                tools:layout_conversion_wrapHeight="1267"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>