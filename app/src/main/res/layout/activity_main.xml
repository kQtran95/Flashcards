<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    
    <Button
            android:text="@string/nextButton"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/nextButton"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/hiraganaViewer"
            app:layout_constraintEnd_toStartOf="@+id/clearButton" android:layout_marginEnd="20dp"/>
    <Button
            android:text="@string/clear"
            android:layout_width="88dp"
            android:layout_height="wrap_content" android:id="@+id/clearButton"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/hiraganaViewer"
            app:layout_constraintEnd_toEndOf="@+id/activity_main" android:layout_marginEnd="96dp"/>
    <ImageView
            android:layout_width="fill_parent"
            android:adjustViewBounds="true"
            android:layout_height="350dp" android:id="@+id/hiraganaViewer"
            android:contentDescription="@string/hiragana_a"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <android.support.constraint.ConstraintLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" tools:layout_editor_absoluteX="27dp"
            app:layout_constraintTop_toTopOf="parent">
        <com.example.flashcards.PaintView
                android:id="@+id/paintView"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                tools:layout_conversion_wrapWidth="1440"
                tools:layout_conversion_wrapHeight="1267"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>